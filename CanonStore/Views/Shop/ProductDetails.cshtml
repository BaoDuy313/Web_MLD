@model CanonStore.Models.Product
@{
    Layout = "~/Views/Shared/ShopLayout.cshtml";
}

<div class="main">
    <div class="container_detail">
        <div class="detail_product">
            <div class="detail_img">
                <img src="~/Content/image/@Model.Image" alt="">
            </div>
            <div class="deltail">
                <div class="detail_info">
                    <p>@Model.Brand @Model.Name</p>
                    <p>@Model.Price VND</p>
                </div>
                @using (Html.BeginForm("AddToCart", "Shop", FormMethod.Post, new { @class = "cart" }))
                {
                    @Html.HiddenFor(m => m.Id, new { @class = "form-control" })

                    <div class="detail_info">
                        @Html.TextBox("txtQuantity", "1", new { @type = "number", @min = "1",@max = "5", @step = "1", @value = "1", @class = "input-quality" })
                        
                    </div>

                    <div class="btn">
                        <button type="submit">Add to cart</button>

                    </div>
                }

            </div>
        </div>
        <div class="detail_decription">
            <p>@Model.Description</p>
        </div>
    </div>
    <div class="product_list">
        <div class="row">
            @foreach (var item in ViewBag.products3)
            {
                <div class="single_product">
                    <div class="single_product_shop">
                        <a href="~/Shop/ProductDetails/@item.Id"><img src="~/Content/image/@item.Image" alt=""></a>
                        <p><a href=""> @item.Name </a></p>
                        <p> @item.Price VND</p>

                    </div>
                </div>
            }

        </div>
    </div>
</div>
