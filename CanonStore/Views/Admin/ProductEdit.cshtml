@model CanonStore.Models.Product
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="main">
    <div class="form_content">
        <h2>Edit Product</h2>
        <div class="form_product">

            @using (Html.BeginForm("ProductUpdate", "Admin", FormMethod.Post))
            {
                <div class="row">

                    @Html.HiddenFor(m => m.Id, new { @class = "form-control" })<br><br>
                </div>

                <div class="row">
                    <label for="Name" class="form_label">Product Name:</label>
                    <br>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    <br>
                    <br>
                </div>
                <div class="row">
                    <label for="Brand" class="form_label">Product Brand:</label>
                    <br>
                    @Html.TextBoxFor(m => m.Brand, new { @class = "form-control" })
                    <br>
                    <br>
                </div>
                <div class="row">
                    <label for="Price" class="form_label">Product Price:</label>
                    <br>
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
                    <br>
                    <br>
                </div>
                <div class="row">
                    <label for="Type_Product" class="form_label">Product Type:</label><br>
                    @Html.DropDownListFor(m => m.Type,
                        new SelectList(ViewBag.type_Products, "IdType", "Name"),
                        new { @class = "form-control" })<br><br>
                </div>
                <div class="row">
                    <label for="Mount_Product" class="form_label">Mount:</label><br>
                    @Html.DropDownListFor(m => m.Mount,
                        new SelectList(ViewBag.mount_Products, "IdMount", "Name"),
                        new { @class = "form-control" })<br><br>
                </div>


                <div class="row">
                    <label for="Warranty" class="form_label">Product Warranty:</label>
                    <br>
                    @Html.TextBoxFor(m => m.Warranty, new { @class = "form-control" })
                    <br>
                    <br>
                </div>

                <div class="row">
                    <label for="Description" class="form_label">Product Description:</label>
                    <br>
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                    <br>
                    <br>
                </div>
                <div class="row">
                    <label for="Image" class="form_label">Product Imager:</label>
                    <br>
                    @Html.TextBoxFor(m => m.Image, new { @class = "form-control" })
                    <br>
                    <br>
                </div>
                <div class="btn_row">
                    <input type="submit" value="Edit Product" class="btn_addproduct">
                </div>
            }

        </div>
    </div>

</div>
