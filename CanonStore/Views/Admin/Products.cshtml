@model List<CanonStore.Models.Product>
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="main">
   
    <h1>Produts</h1><br />
    <div style="width:200px;">
        <a href="~/Admin/ProductAdd"><h3 style="color:Highlight; ">Add Product</h3></a><br /><br />
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Brand</th>
                <th scope="col">Price</th>

                <th scope="col">Images</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Brand</td>
                    <td>@item.Price</td>

                    <td><img src="~/Content/image/@item.Image" alt="Alternate Text" style="width:120px; height:100px" /></td>
                    <td>
                        <a href="~/Admin/ProductDetails/@item.Id">Details</a> |
                        <a href="~/Admin/ProductEdit/@item.Id">Edit</a> |
                        <a href="~/Admin/ProductDelete/@item.Id">Delete</a>
                    </td>

                </tr>
            }

        </tbody>
    </table>
</div>