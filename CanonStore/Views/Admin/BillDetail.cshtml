@model CanonStore.Models.Bill
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="main">
    <h1>Bill</h1><br />

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Date Created</th>
                <th scope="col">Customer</th>
                <th scope="col">Emloyee</th>
                <th scope="col">Total</th>
                
            </tr>
        </thead>
        <tbody>
                <tr>
                    <th scope="row">@Model.IdBill</th>
                    <td>@Model.Date_Created</td>
                    <td>@ViewBag.customer.Name</td>
                    <td>@ViewBag.emloyee.Name</td>
                    <td>@Model.Total</td>
                </tr>
        </tbody>
    </table>
    <h1>Bill Detail</h1><br />

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id Bill</th>
                <th scope="col">Id Product</th>
                <th scope="col">Qualily</th>
                <th scope="col">Price</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.bill_Details)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.IdBill</td>
                    <td>@item.IdProduct</td>
                    <td>@item.Quality</td>
                    <td>@item.Price</td>
                    <td>
                        <a href="~/Admin/ProductDetails/@item.IdProduct">Edit</a> |
                        <a href="~/Admin/CustomerDelete/@item.IdBill">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

